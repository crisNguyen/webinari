<div class="col-lg-10 col-xl-8 mx-auto">
  <div class="card-shadow">
    <div class="card-header">
      <h4 class="card-title"> Refund Request Request Submitted for 
      <%= @booking.order_number %>
      </h4>
    </div>
    <div class="card-body">
      <h1>Hey Admin User</h1>

      <h3>Hello <%= @customer.full_name %></h3>
      <p class="lead">A refund request is submitted for
      <%= link_to @workshop.name, workshop_url(@workshop), 
      target: '_blank' %> by <strong><%= @customer.full_name %></strong>

      <p class="lead">Please find the refund details below:</p>
      <hr>
      <h5>No. of tickets to be cancelled: <%= @refund.no_of_tickets %></h5>
      <h5>Refundable Amount: $ <%= @refundable_amount %></h5>
      <h5>Booking for: <%= link_to @workshop.name, workshop_url(@workshop), 
      target: '_blank' %></h5>
    </div>
  </div>
</div>